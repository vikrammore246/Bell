                android:layout_weight="2"
                android:textSize="@dimen/timessize"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="10. "
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/timessize"/>
            <TextView
                android:id="@+id/timet10"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:hint="null"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="@dimen/timessize"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Announcement Text"
        android:gravity="center"
        android:textSize="@dimen/timessize"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="#2196F3"
        android:textColor="#ffff"/>
    <TextView
        android:id="@+id/txtAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textSize="25sp"
        android:hint="Announcement will be displayed here.."
        android:background="@drawable/customtextview"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/txtDisabledAnnouncement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:textSize="25sp"
        android:hint="Announcement will be displayed here.."
        android:background="@drawable/customtextview"
        android:textColor="@color/colorAccent"/>


    <TextView
        android:id="@+id/mainlogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BELL"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="serif-monospace"
        android:background="@drawable/customtextview"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"/>

