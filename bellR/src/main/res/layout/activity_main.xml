<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.bell.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/buttonStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="activate conn."
            android:onClick="onClickStart"
            android:background="@drawable/buttonround"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/buttonStop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Deactivate conn."
            android:onClick="onClickStop"
            android:background="@drawable/buttonround"
            android:layout_weight="1"/>

    </LinearLayout>

    <!--<TextView-->
        <!--android:id="@+id/connStatusView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="usb connection status"-->
        <!--android:gravity="center"-->
        <!--android:textSize="15dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:textColor="@color/colorPrimary"/>-->



    <TextView
        android:id="@+id/timeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Current System Time"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:textColor="#000000"/>


    <TextView
        android:id="@+id/noticeMess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dr. Rajendra Gode Institute of Technology &amp; Research"
        android:textSize="22sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif-condensed"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/clg"
        android:layout_marginBottom="200dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="#20616161">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Timings"
            android:gravity="center"
            android:textSize="@dimen/timessize"
            android:layout_marginBottom="10dp"
            android:background="#2196F3"
            android:textColor="#ffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="1. "
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/timessize"/>
            <TextView
                android:id="@+id/timet1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:hint="null"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="@dimen/timessize"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="6. "
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/timessize"/>
